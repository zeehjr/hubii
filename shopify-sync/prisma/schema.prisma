generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SyncTrackerData {
  id                       String    @id @default(cuid())
  //
  lastSyncedShopifyOrderId String?   @map("last_synced_shopify_order_id")
  lastSyncedShopifyOrderAt DateTime?
  //
  lastSyncedProductId      Int?      @map("last_synced_product_id")
  lastSyncedProductAt      DateTime?
  //
  createdAt                DateTime  @default(now()) @map("created_at")
  updatedAt                DateTime  @updatedAt @map("updated_at")
}

model Log {
  id      String   @id @default(cuid())
  //
  date    DateTime
  message String
  logType LogType  @map("log_type")

  //
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum LogType {
  info
  warning
  error
}
